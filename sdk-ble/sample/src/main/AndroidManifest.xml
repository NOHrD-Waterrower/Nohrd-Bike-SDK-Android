<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nohrd.bike.sdk.ble.sample">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".NohrdBikeBleSampleApplication"
        android:label="@string/app_name"
        android:theme="@style/Theme.NohrdBikeBleSample"
        tools:ignore="AllowBackup,MissingApplicationIcon">

        <activity android:name=".ui.devices.DevicesActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.devicedetails.DeviceDetailsActivity" />

    </application>

</manifest>